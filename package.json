{
  "name": "sciencedao-agent",
  "version": "1.0.0",
  "description": "Autonomous AI research agent system for ScienceDAO",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "ts-node src/index.ts",
    "start:continuous": "ts-node src/index.ts --continuous",
    "start:continuous:5min": "ts-node src/index.ts --continuous 5",
    "start:debug": "DEBUG=true ts-node src/index.ts",
    "demo": "ts-node demo/run_demo.ts",
    "test": "npm run test:fetch && npm run test:analyze && npm run test:hypothesis",
    "test:fetch": "ts-node tests/testFetchPapers.ts",
    "test:analyze": "ts-node tests/testAnalyzePaper.ts",
    "test:hypothesis": "ts-node tests/testGenerateHypothesis.ts",
    "test:agent": "ts-node tests/testResearchAgent.ts",
    "test:pipeline": "ts-node tests/testFullPipeline.ts",
    "test:longrunning": "ts-node tests/testLongRunning.ts",
    "test:multiagent": "ts-node src/test_multi_agent.ts",
    "test:all": "npm run test:fetch && npm run test:analyze && npm run test:hypothesis && npm run test:agent",
    "compile:contracts": "npx hardhat compile",
    "deploy:baseSepolia": "npx hardhat run scripts/deploy.ts --network baseSepolia",
    "verify:baseSepolia": "npx hardhat run scripts/verify.ts --network baseSepolia",
    "clean": "rm -rf dist artifacts cache"
  },
  "keywords": [
    "ai",
    "research",
    "desci",
    "virtuals",
    "blockchain"
  ],
  "author": "ScienceDAO Team",
  "license": "MIT",
  "dependencies": {
    "@openzeppelin/contracts": "^5.4.0",
    "@types/xml2js": "^0.4.14",
    "@virtuals-protocol/game": "^0.1.14",
    "axios": "^1.12.2",
    "cheerio": "^1.1.2",
    "dotenv": "^17.2.3",
    "ethers": "^6.15.0",
    "xml2js": "^0.6.2"
  },
  "devDependencies": {
    "@nomicfoundation/hardhat-toolbox": "^4.0.0",
    "@types/node": "^24.8.0",
    "hardhat": "^2.19.4",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3"
  }
}
